<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StuDrugStore.StuBuyDrug"
    android:background="#F5F5F5"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#FD0896F5">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="确认订单"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/stu_yaodian_shouhuo_change"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--显示收获地址信息-->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/address1"
            android:layout_marginLeft="20dp">
    </ImageView>
    <TextView
        android:id="@+id/stu_buyyao_address"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_height="60dp"
        />
    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/youjiantou"
        android:layout_gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingRight="10dp"
        />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <!--放置药品图片和简介-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:background="#FFFFFF"
       >
<ImageView
    android:id="@+id/displayDrugPicture"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:src="@drawable/test"
    />
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="3">
       <!--用于显示药品名字和简介-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_weight="1"
          >
       <TextView
           android:id="@+id/stuName"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_gravity="center_vertical"
           android:text="999感冒灵"
           android:textSize="16dp"
           android:textColor="#000000"
           android:layout_weight="1"
           />
      <TextView
          android:id="@+id/stuPrcie"
          android:layout_width="wrap_content"
          android:layout_marginLeft="100dp"
          android:layout_gravity="center_vertical"
          android:layout_height="match_parent"
          android:text="￥ 198"
          android:textColor="#FFFD0505"
          android:gravity="right"
          android:layout_weight="1"
          />
      </LinearLayout>
      <TextView
          android:id="@+id/stuDiscribe"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="16dp"
          android:textColor="#000000"
          android:text="用于治疗小儿咳嗽、感冒">

      </TextView>
  </LinearLayout>
   </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"/>



    <!--放置购买数量和加减号-->
    <LinearLayout
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="购买数量"
            android:textSize="16dp"
            android:textColor="#000000"
            />

        <!--放置加减号和数量-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >

           <ImageView
               android:id="@+id/buyYaoJianHao"
               android:background="@drawable/biankuang"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/jianhao"
               />
            <TextView
                android:id="@+id/yaoPinNumber"
                android:gravity="center"
                android:layout_width="40dp"
                android:text="1"
                android:textSize="16dp"
                android:background="@drawable/biankuang"
                android:textColor="#000000"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/buyYaoJiaHao"
                android:background="@drawable/biankuang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/jiahao"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="请选择支付方式"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        />


    <!--支付宝支付-->
    <LinearLayout
        android:id="@+id/zhiFuBaoPay"
        android:background="#FFFFFF"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/zhifubaopay"
            />
        <TextView
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="支付宝支付"
            android:textColor="#000000"
            android:textSize="15dp"
            />

        <ImageView
            android:id="@+id/zhiFuBaoChecked"
            android:layout_marginLeft="140dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/choiced"
            />

    </LinearLayout>

    <!--分割线-->
    <TextView
        android:layout_marginLeft="30dp"
        android:background="#525252"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <!--微信支付-->
    <LinearLayout
        android:id="@+id/weiXinPay"
        android:background="#FFFFFF"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

<ImageView
    android:layout_gravity="center_vertical"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:src="@drawable/weixinpay"
    />

<TextView
    android:paddingLeft="10dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="微信支付"
    android:textColor="#000000"
    android:textSize="16dp"
    />

        <ImageView
            android:id="@+id/weiXinPayChecked"
            android:layout_marginLeft="150dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/choiced"
            />
    </LinearLayout>






    <!--填充屏幕-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!--显示花费金额和购买-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#525252"
        />
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/stuBuyPrice"
                android:gravity="center"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/stuBuyImmediately"
                android:background="@drawable/style_jiesuan"
                android:text="立即购买"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:textColor="#F1EEEE"
                android:textSize="16dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>

        </LinearLayout>

</LinearLayout>