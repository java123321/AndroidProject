<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FD0896F5"
        android:orientation="horizontal">

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/delete"
            android:layout_gravity="left"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginRight="20dp"
            android:textColor="#FFFFFF"
            android:text="删除" />

        <TextView
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="添加药品"
            android:layout_marginLeft="77dp"
            android:textSize="25dp"
            android:layout_weight="10"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/add"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:text="保存" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/style_dialog_yuanjiao"
         android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="120dp"
            android:layout_gravity="center"
            android:src="@drawable/picture1"/>
      </LinearLayout>
     <LinearLayout
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/style_dialog_yuanjiao">
             <TextView
                 android:text="名称:"
                 android:textSize="16dp"
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"/>
             <EditText
                 android:id="@+id/drug_name"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:textCursorDrawable="@null"
                 android:background="@drawable/edit_selector"/>
         </LinearLayout>

                 <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                     android:orientation="vertical"
                    >
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:background="@drawable/style_dialog_yuanjiao">
                     <TextView
                         android:text="价格:"
                         android:textSize="16dp"
                         android:layout_width="40dp"
                         android:layout_height="wrap_content"/>

                     <EditText
                         android:id="@+id/drug_price"
                         android:layout_width="12dp"
                         android:layout_height="50dp"
                         android:layout_weight="2"
                         android:background="@drawable/edit_selector"
                         android:textCursorDrawable="@null" />
                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:background="@drawable/style_dialog_yuanjiao">

                     <TextView
                         android:text="库存:"
                         android:textSize="16dp"
                         android:layout_width="40dp"
                         android:layout_height="wrap_content"/>

                     <EditText
                         android:id="@+id/drug_num"
                         android:layout_width="0dp"
                         android:layout_weight="2"
                         android:layout_height="50dp"
                         android:textCursorDrawable="@null"
                         android:background="@drawable/edit_selector" />
                     </LinearLayout>
                </LinearLayout>




     </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="类别:"
                android:textSize="16dp" />
            <Spinner
                android:id="@+id/drug_kind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:entries="@array/spingarr"
                android:background="@drawable/style_dropdown"/>
            <TextView
                android:text="性质:"
                android:textSize="16dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/drug_attribyte"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:entries="@array/sort"
                android:layout_marginRight="10dp"
                android:background="@drawable/style_dropdown"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="简介:"/>
        <EditText
            android:id="@+id/drug_msg"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="150dp"
            android:textSize="16dp"
            android:gravity="top"
            android:textCursorDrawable="@null"
            android:background="@drawable/style_dialog_yuanjiao"
            android:maxLines="5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
